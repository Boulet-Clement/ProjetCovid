{% extends 'base.html.twig' %}

{% block title %}Groupes{% endblock %}

{% block stylesheets %}  
	<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <link rel="stylesheet" href="css/auth/group.css">
{% endblock %}

{% block main %}

<div class="recherche_p">
  <form class="form-inline my-2 my-lg-0">
    <div class="recherche-barr">
      <input class="recherche-input" type="search" placeholder="Rechercher un groupe" aria-label="Search">
      <a href="#" class="recherche-icone">
        <i class="fas fa-search"></i>
      </a>
    </div>
  </form>
</div>

  <button class="btn btn-primary" id="btn_create_group">Créer un groupe</button>
  
<div class="container" id="form-create-groupe" style="display:none;">
  <form action="/group" method ="POST">
    <div class="form-group">
      <label for="input_groupname">Nom du groupe</label>
      <input type="text" name="groupName" class="form-control" id="input_groupname" placeholder="Mon groupe d'amis">
    </div>
    <button type="submit" class="btn btn-primary">Créer</button>
    <a class="btn btn-danger" id="btn_cancel" style="color:white;">Annuler</a>
  </form>
</div>


<div class="container">
  <div class="row">
    
      <div class="card">
        <div class="card-header">
		      <h3>Nom du groupe</h3>
          <ul class="nav nav-tabs card-header-tabs" id="bologna-list" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" href="#description" role="tab" aria-controls="description" aria-selected="true">Description</a>
            </li>
            <li class="nav-item">
              <a class="nav-link"  href="#chat" role="tab" aria-controls="chat" aria-selected="false">Chat</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#membres" role="tab" aria-controls="membres" aria-selected="false">Membres</a>
            </li>
          </ul>
        </div>
        <div class="card-body">
           <div class="tab-content mt-3">
            <div class="tab-pane active" id="description" role="tabpanel">
              <p class="card-text">Description du groupe</p>
            </div>
             
            <div class="tab-pane" id="chat" role="tabpanel" aria-labelledby="chat-tab">  
              <p class="card-text">
                <ul id="chat"></ul>
                  <form>
                    <textarea rows="4" cols="50" id="message"  readonly></textarea>
                    <br />
                    <input class="send" type="text" placeholder="Ecrivez vous message ici...">
                    <button class="btn btn-outline-primary" type="submit">Envoyer</button>
                  </form>
              </p>
            </div>
             
            <div class="tab-pane" id="membres" role="tabpanel" aria-labelledby="membres-tab">
              <p class="card-text">Liste des membres</p>
              <ul id="membres-liste">
              <li>Pierre paul</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>
{% endblock %}

{% block javascripts %}
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script>
$('#btn_create_group').on('click', function (e) {
  $('#form-create-groupe').show();
})
$('#btn_cancel').on('click', function (e) {
  $('#form-create-groupe').hide();
})
</script>

{% endblock %}